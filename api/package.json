{
  "name": "@napp/api",
  "version": "1.0.3",
  "description": "Rest full api",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.prod.json",
    "postbuild": "node build.js",
    "---1": "------------------------------------------------------------------------------------",
    "push:core": "cd dist/core & npm publish --access=public",
    "push:server": "cd dist/client & npm publish --access=public",
    "push:client": "cd dist/server & npm publish --access=public",
    "---2": "------------------------------------------------------------------------------------",
    "version": "npm version patch",
    "prepush": "npm run build",
    "push": "npm run push:core & npm run push:server & npm run push:client",
    "---3": "------------------------------------------------------------------------------------",
    "test:server": "ts-node -r source-map-support/register -r tsconfig-paths/register test/server/server.ts",
    "test": "mocha -r ts-node/register -r source-map-support/register -r tsconfig-paths/register test/**/*.test.ts"
  },
  "keywords": [],
  "author": "farcek@gmail.com",
  "license": "ISC",
  "engines": {
    "node": ">=12.14.1"
  },
  
  "dependencies": {
    "@testdeck/mocha": "^0.1.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.11",
    "body-parser": "^1.19.0",
    "cross-fetch": "^3.0.4",
    "express": "^4.17.1",
    "mocha": "^7.2.0",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  }
}
